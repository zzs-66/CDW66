                ]
            },
            {
                background: 'bg-cafe',
                characters: [{id: 'sakura', position: 'left'}],
                speaker: "Ê®±",
                dialog: "ËøôÂÆ∂ÂíñÂï°È¶ÜÁúüÊºÇ‰∫ÆÔºÅÁúãÔºåÈÇ£Â∞±ÊòØ‰ªñ‰ª¨ÁöÑÊãõÁâåÊ®±Ëä±ËõãÁ≥ï„ÄÇ",
                choices: [
                    { text: "ÁúãËµ∑Êù•ÁúüÁæéÂë≥ÔºÅ", next: 10, affection: +5 },
                    { text: "‰Ω†ÈÄâÁöÑÂú∞ÊñπÁúü‰∏çÈîô", next: 11, affection: +10 }
                ]
            }
        ];
        
        // DOMÂÖÉÁ¥†
        const elements = {
            affection: document.getElementById('affection'),
            chapter: document.getElementById('chapter'),
            savePoint: document.getElementById('save-point'),
            currentDialog: document.getElementById('current-dialog'),
            gameProgress: document.getElementById('game-progress'),
            saveNotification: document.getElementById('save-notification'),
            choicesContainer: document.getElementById('choices-container'),
            loader: document.getElementById('loader')
        };
        
        // ÂàùÂßãÂåñÊ∏∏Êàè
        function initGame() {
            // ËÆæÁΩÆÂç†‰ΩçÂõæÁâá
            document.getElementById('bg-school').style.backgroundImage = `url('${placeholderBG}')`;
            document.getElementById('character-sakura').src = placeholderImage;
            
            // Â∞ùËØïÂä†ËΩΩ‰øùÂ≠òÁöÑÊ∏∏Êàè
            const savedGame = localStorage.getItem('galgameSave');
            if (savedGame) {
                try {
                    const parsed = JSON.parse(savedGame);
                    Object.assign(gameState, parsed);
                    showNotification("Ê∏∏ÊàèÂ∑≤Âä†ËΩΩÔºÅ", "save-notification");
                } catch (e) {
                    console.error("Âä†ËΩΩÂ≠òÊ°£Â§±Ë¥•:", e);
                }
            }
            
            updateUI();
            
            // Ê∑ªÂä†‰∫ã‰ª∂ÁõëÂê¨Âô®
            document.getElementById('btn-save').addEventListener('click', saveGame);
            document.getElementById('btn-load').addEventListener('click', loadGame);
            document.getElementById('btn-menu').addEventListener('click', showMenu);
            document.getElementById('btn-auto').addEventListener('click', toggleAutoPlay);
            document.getElementById('btn-skip').addEventListener('click', skipScene);
            
            // ÈöêËóèÂä†ËΩΩÂô®
            setTimeout(() => {
                elements.loader.style.opacity = "0";
                setTimeout(() => {
                    elements.loader.style.display = "none";
                }, 500);
            }, 800);
        }
        
        // Êõ¥Êñ∞Ê∏∏ÊàèUI
        function updateUI() {
            const current = script[gameState.currentScene];
            
            // Êõ¥Êñ∞ÊñáÊú¨
            elements.currentDialog.textContent = current.dialog;
            document.querySelector('.speaker').textContent = current.speaker;
            
            // Êõ¥Êñ∞ÈÄâÊã©
            elements.choicesContainer.innerHTML = '';
            current.choices.forEach((choice, index) => {
                const choiceElement = document.createElement('div');
                choiceElement.className = 'choice';
                choiceElement.textContent = choice.text;
                choiceElement.addEventListener('click', () => handleChoice(choice));
                elements.choicesContainer.appendChild(choiceElement);
            });
            
            // Êõ¥Êñ∞Áä∂ÊÄÅ
            elements.affection.textContent = gameState.affection;
            elements.chapter.textContent = gameState.chapter;
            elements.savePoint.textContent = gameState.savePoint;
            
            // Êõ¥Êñ∞ËøõÂ∫¶
            const progress = ((gameState.currentScene + 1) / script.length) * 100;
            elements.gameProgress.style.width = `${progress}%`;
        }
        
        // Â§ÑÁêÜÁé©ÂÆ∂ÈÄâÊã©
        function handleChoice(choice) {
            // Êõ¥Êñ∞Â•ΩÊÑüÂ∫¶
            gameState.affection += choice.affection;
            if (gameState.affection > 100) gameState.affection = 100;
            if (gameState.affection < 0) gameState.affection = 0;
            
            // ËøõÂÖ•‰∏ã‰∏ÄÂú∫ÊôØ
            gameState.currentScene = choice.next;
            
            // Êõ¥Êñ∞UI
            updateUI();
            
            // ÊòæÁ§∫ÈÄöÁü•
            if (choice.affection > 0) {
                showNotification(`Â•ΩÊÑüÂ∫¶ +${choice.affection}`, 'affection-up');
            } else if (choice.affection < 0) {
                showNotification(`Â•ΩÊÑüÂ∫¶ ${choice.affection}`, 'affection-down');
            }
        }
        
        // ‰øùÂ≠òÊ∏∏Êàè
        function saveGame() {
            gameState.savePoint = gameState.currentScene;
            localStorage.setItem('galgameSave', JSON.stringify(gameState));
            showNotification("Ê∏∏ÊàèÂ∑≤‰øùÂ≠òÔºÅ", "save-notification");
            updateUI();
        }
        
        // Âä†ËΩΩÊ∏∏Êàè
        function loadGame() {
            const savedGame = localStorage.getItem('galgameSave');
            if (savedGame) {
                try {
                    const parsed = JSON.parse(savedGame);
                    Object.assign(gameState, parsed);
                    updateUI();
                    showNotification("Ê∏∏ÊàèÂ∑≤Âä†ËΩΩÔºÅ", "save-notification");
                } catch (e) {
                    showNotification("Âä†ËΩΩÂ≠òÊ°£Â§±Ë¥•", "error");
                    console.error("Âä†ËΩΩÂ≠òÊ°£Â§±Ë¥•:", e);
                }
            } else {
                showNotification("Ê≤°ÊúâÊâæÂà∞Â≠òÊ°£", "error");
            }
        }
        
        // ÊòæÁ§∫ËèúÂçï
        function showMenu() {
            showNotification("Ê∏∏ÊàèËèúÂçïÂ∑≤ÊâìÂºÄ", 'menu');
            // Âú®ÂÆûÈôÖÊ∏∏Êàè‰∏≠ÔºåËøôÈáå‰ºöÊòæÁ§∫ÂÆåÊï¥ÁöÑËèúÂçïÁïåÈù¢
        }
        
        // ÂàáÊç¢Ëá™Âä®Êí≠Êîæ
        function toggleAutoPlay() {
            gameState.autoPlay = !gameState.autoPlay;
            const btn = document.getElementById('btn-auto');
            
            if (gameState.autoPlay) {
                btn.textContent = "‚è∏Ô∏è ÊöÇÂÅú";
                showNotification("Ëá™Âä®Êí≠ÊîæÂ∑≤ÂºÄÂêØ", 'auto-play');
            } else {
                btn.textContent = "‚ñ∂Ô∏è Ëá™Âä®Êí≠Êîæ";
                showNotification("Ëá™Âä®Êí≠ÊîæÂ∑≤ÂÖ≥Èó≠", 'auto-play');
            }
        }
        
        // Ë∑≥ËøáÂú∫ÊôØ
        function skipScene() {
            if (gameState.currentScene < script.length - 1) {
                gameState.currentScene++;
                updateUI();
                showNotification("Âú∫ÊôØÂ∑≤Ë∑≥Ëøá", 'skip');
            } else {
                showNotification("Â∑≤ÁªèÊòØÊúÄÂêé‰∏Ä‰∏™Âú∫ÊôØ‰∫Ü", 'error');
            }
        }
        
        // ÊòæÁ§∫ÈÄöÁü•
        function showNotification(message, type) {
            const notification = elements.saveNotification;
            notification.textContent = message;
            notification.className = `notification ${type} active`;
            
            setTimeout(() => {
                notification.classList.remove('active');
            }, 2000);
        }
        
        // ÂàùÂßãÂåñÊ∏∏Êàè
        window.addEventListener('DOMContentLoaded', initGame);
    </script>
